" don't try to be vi compatible
set nocompatible

" Helps force plugins to load correctly when it is turned back on below
filetype off

" Load plugins here (pathogen or vundle)
set rtp+=~/.vim/bundle/Vundle.vim

call vundle#begin()

Plugin 'Raimondi/delimitMate'
Plugin 'Shougo/denite.nvim'
Plugin 'SirVer/ultisnips'
Plugin 'Valloric/YouCompleteMe'
Plugin 'VundleVim/Vundle.vim'
Plugin 'airblade/vim-gitgutter'
Plugin 'chriskempson/base16-vim'
Plugin 'editorconfig/editorconfig-vim'
Plugin 'ervandew/supertab'
Plugin 'evidens/vim-twig'
Plugin 'groenewege/vim-less'
Plugin 'honza/vim-snippets'
Plugin 'jistr/vim-nerdtree-tabs'
Plugin 'joonty/vdebug'
Plugin 'mattn/emmet-vim'
Plugin 'mustache/vim-mustache-handlebars'
Plugin 'nathanaelkane/vim-indent-guides'
Plugin 'othree/html5.vim'
Plugin 'pangloss/vim-javascript'
Plugin 'scrooloose/nerdtree'
Plugin 'scrooloose/syntastic'
Plugin 'terryma/vim-expand-region'
Plugin 'tobyS/vmustache'
Plugin 'tomasr/molokai'
Plugin 'tpope/vim-commentary'
Plugin 'tpope/vim-fugitive'
Plugin 'vim-airline/vim-airline'
Plugin 'vim-airline/vim-airline-themes'
Plugin 'vimwiki/vimwiki'

call vundle#end()            " required

" Turn on syntax highlighting
syntax on

" For plugins to load correctly
filetype plugin indent on
filetype plugin on

" Pick a leader key
let mapleader = "\<space>"

" Remap jj to the Esc key
imap jj <Esc>

" Security
set modelines=0

" Show line numbers
set number
set relativenumber

" Show file stats
set ruler

" Persistent undo
try
	set undodir=~/.vim_undodir
	set undofile
catch
endtry

" 
set guioptions-=m
set guioptions-=T
set guioptions-=r
set guioptions-=L

" Encoding
set encoding=utf-8

" Whitespace
set nowrap
set textwidth=79
set formatoptions=cqrn1
set formatoptions-=t
set tabstop=4
set shiftwidth=4
set softtabstop=4
set noexpandtab
set noshiftround
set autoindent
set smarttab

" Cursor motion
set scrolloff=5
set backspace=indent,eol,start
set matchpairs+=<:> " use % to jump between pairs
runtime! macros/matchit.vim

" Move up/down editor lines
nnoremap j gj
nnoremap k gk

" Allow hidden buffers
set hidden

" Rendering
set ttyfast
set lazyredraw
set updatetime=350
set cursorline

" Status bar
set laststatus=2

" Last line
set showmode
set showcmd

" Searching
nnoremap / /\v
vnoremap / /\v
set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch
map <leader>c :let @/=''<cr> " clear search

" Remap help key.
inoremap <F1> <ESC>:set invfullscreen<CR>a
nnoremap <F1> :set invfullscreen<CR>
vnoremap <F1> :set invfullscreen<CR>

" Tab shortcuts
nnoremap <leader>p :tabprevious<CR>
nnoremap <leader>n :tabnext<CR>
nnoremap <leader>c :tabclose<CR>

" Visualize tabs and newlines
set listchars=tab:▸\ ,eol:¬
" Uncomment this to enable by default:
" set list " To enable by default
" Or use your leader key + l to toggle on/off
map <leader>l :set list!<CR> " Toggle tabs and EOL

set term=screen-256color
colorscheme molokai

" Quickly save using leader+w
nmap <leader>w :w<CR>

" Quickly save and quit using leader+wq
nmap <leader>wq :wq<CR>

" Quit without saving using leader+qq
nmap <leader>qq :q!<CR>

" Random leader things
nmap <leader>f :NERDTreeMirrorToggle<CR>
nmap <leader>b :TagbarOpenAutoClose<CR>
nmap <leader>j :%!python -m json.tool<CR>
nmap <leader>v :tabedit ~/.vimrc<CR>
nmap <leader>r :so $MYVIMRC<CR>
nmap <leader><space> :let @/=""<CR>
vmap <leader>y "+y

" Random things
let NERDTreeQuitOnOpen=1
let g:nerdtree_tabs_open_on_gui_startup=2
let g:gitgutter_sign_column_always = 1
set formatoptions-=t
set noswapfile
set cursorline
set nobackup
set tags=tags;/
au InsertEnter * set nonumber
au InsertLeave * set number
let g:vimwiki_list = [{'path': '~/dotfiles/vimwiki'}]

" iOS tweak syntax highlighting
au BufRead,BufNewFile *.xm set filetype=objc
au BufRead,BufNewFile *.mm set filetype=objc

" Airline
let g:airline_powerline_fonts = 1

set rtp+=$HOME/.local/lib/python2.7/site-packages/powerline/bindings/vim/
set laststatus=2
set t_Co=256

let g:syntastic_always_populate_loc_list = 1
let g:syntastic_auto_loc_list = 1
let g:syntastic_check_on_open = 1
let g:syntastic_check_on_wq = 0

" YouCompleteMe and UltiSnips compatibility
let g:SuperTabDefaultCompletionType    = '<C-n>'
let g:SuperTabCrMapping                = 0

" YouCompleteMe
let g:ycm_key_list_select_completion   = ['<C-j>', '<C-n>', '<Down>']
let g:ycm_key_list_previous_completion = ['<C-k>', '<C-p>', '<Up>']

let g:UltiSnipsSnippetDirectories=["UltiSnips", $HOME.'/.vim/Snippets']

" UltiSnips
let g:UltiSnipsExpandTrigger="<tab>"
let g:UltiSnipsJumpForwardTrigger="<tab>"
let g:UltiSnipsJumpBackwardTrigger="<s-tab>"

" Denite
nmap <leader>b :Denite file_rec<CR>

set wildignore+=*/tmp/*,*.so,*.swp,*.zip,*/vendors/*,*/tmp/*,*/web/js/*,*/web/css/*
