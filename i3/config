mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

mouse_warping none
for_window [window_role="browser"] border none
for_window [class="Termite"] border none
bindsym $mod+u [urgent=latest] focus

gaps inner 10
gaps outer 5

set $launch "[C]hrome, [T]hunar, T[e]legram, [P]avucontrol"
mode $launch {
    bindsym c exec google-chrome; mode "default"
    bindsym t exec thunar; mode "default"
	bindsym e exec telegram-desktop; mode "default"
	bindsym p exec pavucontrol; mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+c mode $launch

# Media player controls
bindsym XF86AudioRaiseVolume exec "amixer -D pulse sset Master 5%+"
bindsym XF86AudioLowerVolume exec "amixer -D pulse sset Master 5%-"
bindsym XF86AudioMute exec "amixer -D pulse sset Master toggle"
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

